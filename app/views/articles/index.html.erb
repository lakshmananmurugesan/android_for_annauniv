<h1>Listing Android Exercises</h1>

<div id="articles">
<table>
  <thead>
    <tr>
      <th>Exercises</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><span id="<%= article.id %>" class="articleLink"><strong>Go to <%= article.name %></strong></span></td>
        <td><%= article.description.html_safe %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<%= @articlefilename %>
<%= link_to 'New Exercise', new_article_path %>
